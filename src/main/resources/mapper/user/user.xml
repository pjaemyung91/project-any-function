<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.myproject.login.dao.LoginDao">

  <insert id="saveUser" parameterType="com.example.myproject.user.dto.UserDto">
    <selectKey keyColumn="id" keyProperty="id" order="AFTER">
      SELECT
        LAST_INSERT_ID() as id
      FROM
        customer
    </selectKey>

    INSERT INTO customer (email, pwd, `role`) VALUES (#{email}, #{pwd}, #{role})
  </insert>

</mapper>