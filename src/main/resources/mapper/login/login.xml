<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.myproject.login.dao.LoginDao">
  <select id="findUserById" parameterType="String" resultType="com.example.myproject.user.dto.UserDto">
    SELECT
        id as id,
        username as username,
        password as password
    FROM
        users
    WHERE
        username = #{username}
  </select>
</mapper>